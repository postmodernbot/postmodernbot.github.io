@page "/"
@using PostBot.Dialog
@inject IDialogService DialogService

<PageTitle>PostBot</PageTitle>

<MudContainer Style="background:#000f; height:100vh; width:100%"/>
<br/>
<MudContainer Style="height:50vh; width:100%">
    <MudGrid>
        <MudItem xs="6">
            <center>
                <MudButton OnClick="OpenAbout">About</MudButton>
            </center>
        </MudItem>
        <MudItem xs="6">
            <center>
                <MudButton>Projects</MudButton>
            </center>
        </MudItem>
    </MudGrid>
</MudContainer>
<br/>
<MudGrid>
    <MudItem xs="4">
        <center>
            <MudButton OnClick="OpenSocialMedia">SOCIAL MEDIA</MudButton>
        </center>
    </MudItem>
    <MudItem xs="4">
        <center>
            <MudButton>
                <MudLink Href="mailto:postmodernbot.info@gmail.com">EMAIL</MudLink>
            </MudButton>
        </center>
    </MudItem>
    <MudItem xs="4">
        <center>
            <MudButton>
                <MudLink Href="https://opensea.io/post_bot">NFT GALLERY</MudLink>
            </MudButton>
        </center>
    </MudItem>
</MudGrid>
<br/>
<br/>

@code {

    public void OpenAbout()
    {
        var options = new DialogOptions {NoHeader = false, MaxWidth = MaxWidth.ExtraExtraLarge, CloseButton = true};
        var parameters = new DialogParameters();
        DialogService.Show<About>("About", parameters, options);
    }

    public void OpenSocialMedia()
    {
        var options = new DialogOptions {NoHeader = false, MaxWidth = MaxWidth.ExtraExtraLarge, CloseButton = true};
        var parameters = new DialogParameters();
        DialogService.Show<SocialMedia>("Social Media", parameters, options);
    }

}